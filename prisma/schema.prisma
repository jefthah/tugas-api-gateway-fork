generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id    Int     @id @default(autoincrement())
  nim String  @unique
  name  String
  email String @unique
  telp String @unique
  subjects Subject[]
}

model Subject {
  id        Int     @id @default(autoincrement())
  name    String
  credits   Int
  semester Int
  student    Student    @relation(fields: [studentId], references: [id])
  studentId  Int
}